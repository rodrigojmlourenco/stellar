<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.Stellar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_900</item>
        <item name="colorPrimaryContainer">@color/navy_900</item>
        <item name="colorPrimaryVariant">@color/navy_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_300</item>
        <item name="colorSecondaryVariant">@color/purple_600</item>
        <item name="colorSecondaryContainer">@color/purple_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/pink_100</item>
        <item name="colorTertiaryContainer">@color/pink_400</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="colorOnTertiaryContainer">@color/black</item>

        <!-- Error Colors -->
        <item name="colorError">@color/light_pink_800</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/light_pink_900</item>
        <item name="colorOnErrorContainer">@color/white</item>

        <!-- Surface Colors -->
        <item name="colorSurface">@color/pink_50</item>
        <item name="colorOnSurface">@color/grey_900</item>
        <item name="colorSurfaceVariant">@color/pink_50</item>
        <item name="colorOnSurfaceVariant">@color/grey_900</item>
        <item name="colorSurfaceContainer">@color/pink_50</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>